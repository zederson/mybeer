<!DOCTYPE html>
<html>
<head>
  <title>Mybeers</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="content">

  <header>
    <div id="header-wrap">
      <h1><%= link_to "ByBeer", root_path %> </h1>

      <% if user_signed_in? %>
        <%= render 'layouts/user_navbar' %>
      <% else %>
        <%= render 'layouts/visitor_navbar' %>
      <% end %>
    </div>
  </header>

  <% if notice.present? %>
    <p id="notice"><%= notice %> </p>
  <% end %>
  <% if alert.present? %>
    <p id="alert"><%= alert %> </p>
  <% end %>
  <p><%= link_to "Home", root_path%></p>
  <%= yield %>
</div>

</body>
</html>
